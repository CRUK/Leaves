$green = #73cb00
$dark-green = #4a8300

@keyframes progress
  0%
    background-position: 0 0

  100%
    background-position: 50px 0

.loader
  animation: 1s progress linear infinite
  background: linear-gradient(left top, transparent 25%, $green 25%, $green 50%, transparent 50%, transparent 75%, $green 75%)
  background-size: 25px 25px
  bottom: 5px
  display: none
  left: 5px
  opacity: 0.1
  position: absolute
  right: 5px
  top: 5px

.loading .loader
  display: block

#standard-button
  background: $green
  border: 1px solid $dark-green
  border-radius: 3px
  box-shadow 0 1px 0 rgba(#fff, 0.33) inset, 0 3px 5px rgba(#000, 0.25)
  color: #fff
  font: inherit
  font-weight: bold
  padding: 3px 10px
  text-shadow 0 1px 1px rgba(#000, 0.5)

  &:active
    box-shadow: 0 100px rgba(#000, 0.25) inset, 0 0 2px rgba(#000, 0.25)