.classifier
  .subject-container
    border-bottom: 1px solid #e9e9e9
    padding: 15px

    .subject
      display: block

    button[name="delete-mark"]
      background: #000
      border: 2px solid #fff
      border-radius: 50%
      color: #fff
      font-size: 16px
      font-family: Arial
      height: 20px
      line-height: 0
      width: 20px

  .step
    border-top: 1px solid #fff
    padding: 15px 15px 20px

    .info
      margin: 0 45px
      position: relative

      .number
        color: $green
        font-size: 44px
        line-height: 1
        position: absolute
        right: 100%
        text-align: center
        top: 0
        width: 40px

      .text
        font-size: 22px

      .instruction
        font-size: 13px
        color: #999

  .controls
    bottom: 0
    padding: 15px 15px 20px
    position: absolute
    right: 0

    button
      @extend #standard-button
